
<LoginScreen>
    name: "LoginScreen"
    id: LoginScreen
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: Email
        hint_text: "Email"

    MDTextField:
        id: Password
        hint_text: "Senha"
        password: True

<QuestionAccount>
    name: "LoginScreen"
    id: LoginScreen
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

<MainWindow>:
    name: 'MainWindow'
    id: MainWindow
    MDBottomNavigation:
        panel_color: 0, 0, 0, 0
        MDBottomNavigationItem:
            name: 'Compra'
            text: 'Compra'
            icon: 'cart-check'
            icon_color: 0,0,0,1
            MDToolbar:
                md_bg_bottom_color: 0, 0, 0, 1
                icon_color: self.md_bg_bottom_color
                pos_hint:{"top": 1}
                md_bg_color: 1,1,1,1

                MDTextField:
                    hint_text: "Pesquisar"
                    text_color_normal: 0, 0, 0, 1
                    size_hint_x: 100

                MDIconButton:
                    icon: "magnify"
                    icon_color: 0,0,0,1
                    line_color: 1, 1, 1, 1
                    text_color: 0, 0, 0, 1
                    icon_size: "20sp"
                    halign: 'right'

                MDRoundFlatIconButton:
                    icon: "account"
                    icon_color: 0,0,0,1
                    line_color: 1, 1, 1, 1
                    text: "SUA CONTA"
                    text_color: 0, 0, 0, 1
                    size_hint_y: 0.77
                    size_hint_x: None
                    halign: 'right'
                    on_release: app.Check_User_CreatedAccount_Dialog()

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint_y: 0.89
                GridLayout:
                    cols: 2
                    size_hint_y: None
                    height: self.minimum_height
                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: None, None
                        size: "180dp", "240dp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        haling: "center"

                        MDLabel:
                            text: "Nome Produto ????"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                            halign: "center"

                        FitImage:
                            size_hint_y: 3
                            source: 'img1.png'

                        MDSeparator:
                            height: "1dp"

                        MDLabel:
                            text: "Preco"

                        MDSeparator:
                            height: "1dp"

                        MDFlatButton:
                            text: "COMPRAR"
                            icon: "android"
                            halign: "center"
                            size_hint_x: 1
                            md_bg_color: 1, 0, 1, 1

                    MDCard:
                        orientation: "vertical"
                        padding: "8dp"
                        size_hint: None, None
                        size: "180dp", "240dp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        haling: "center"

                        MDLabel:
                            text: "Nome Produto ????"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]
                            halign: "center"

                        FitImage:
                            size_hint_y: 3
                            source: 'img1.png'

                        MDSeparator:
                            height: "1dp"

                        MDLabel:
                            text: "Preco"

                        MDSeparator:
                            height: "1dp"

                        MDFlatButton:
                            text: "COMPRAR"
                            icon: "android"
                            halign: "center"
                            size_hint_x: 1
                            md_bg_color: 1, 0, 1, 1

        MDBottomNavigationItem:
            name: 'Finalizar Pedido'
            text: 'Finalizar Pedido'
            icon: 'cart-check'
            icon_color: 0,0,0,0
            text_color: 0,0,0,0
            MDLabel:
                text: 'Finalizar pedido'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'Sua Loja'
            text: 'Sua Loja'
            icon: 'store'
            icon_color: 1, 0, 0, 1
            MDLabel:
                text: 'Finalizar pedido'
                halign: 'center'
